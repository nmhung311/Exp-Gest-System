{
  "name": "exp-gest-system",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo: frontend (Next.js) + backend (Flask)",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "build": "npm --prefix frontend run build",
    "install:frontend": "npm --prefix frontend ci || npm --prefix frontend install",
    "dev:frontend": "npm --prefix frontend run dev",
    "start:frontend": "npm --prefix frontend run start",
    "dev:backend": "python backend/app.py"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16"
  }
}
